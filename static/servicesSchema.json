{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$defs": {
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "links": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "isExternal": {
                    "type": "boolean"
                  },
                  "href": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": [
                  "isExternal",
                  "href",
                  "title"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "required": [
          "id",
          "title",
          "links"
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalAttributes": false,
  "required": [
    "id",
    "title",
    "links"
  ]
}
